{
  "manifest_version": 3,
  "name": "mARK.it - Universal bookmark manager",
  "version": "1.0",
  "description": "Universal bookmark manager across platforms",
  "permissions": [
    "activeTab", "tabs", "bookmarks", "*://localhost/*", "contextMenus", "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "externally_connectable": {
    "matches": [
      "*://localhost/*"
    ],
    "accepts_tls_channel_id": true
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.instagram.com/*",
        "https://*.x.com/*",
        "https://*.gitlab.com/*",
        "https://*.github.com/*",
        "https://*.reddit.com/*",
        "*://localhost/*"
      ],
      "js": [
        "platforms.js",
        "domObserver.js",
        "bookmarkHandler.js",
        "showPopup.js",
        "popup.js",
        "content.js",
        "popup.js",
        "config.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "bookmarkalert@extension.com",
      "strict_min_version": "109.0"
    }
  }
}